<Window x:Class="GraphicFilters.Views.Dialogs.ThresholdDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicFilters.Views.Dialogs"
        mc:Ignorable="d"
        Title="ThresholdDialog" Height="310" Width="300" ResizeMode="NoResize"
        xmlns:viewmodel="clr-namespace:GraphicFilters.ViewModels">
    <Grid>
        <Label Margin="18,42,197,201" FontSize="12">Percentage</Label>
        <Slider x:Name="percentage" Margin="102,47,47,201" Minimum="0" Maximum="100" Interval="1" Value="{Binding Percentage}"/>
        <TextBlock Text="{Binding ElementName=percentage, Path=Value}" Margin="260,47,13,201"></TextBlock>
        <Label Margin="21,94,171,149">Window size</Label>
        <TextBox x:Name="window" Margin="139,99,120,152" Text="{Binding WindowSize}"/>
        <Label FontSize="10" Margin="179,100,95,149">px</Label>
        <Button x:Name="applyBtn" Margin="209,189,31,63" Command="{Binding ApplyChangesCommand}">Apply</Button>
        <Button x:Name="cancelBtn" Margin="121,189,119,63">Cancel</Button>
        <Button x:Name="saveBtn" Margin="33,189,207,63">Save</Button>
    </Grid>
</Window>
