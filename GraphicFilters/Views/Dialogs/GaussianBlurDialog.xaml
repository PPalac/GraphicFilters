<Window x:Class="GraphicFilters.Views.Dialogs.GaussianBlurDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicFilters.Views.Dialogs"
        mc:Ignorable="d"
        Title="GaussianBlurDialog" Height="300" Width="300"
        ResizeMode="NoResize"
        xmlns:viewmodel="clr-namespace:GraphicFilters.ViewModels">
    <Window.DataContext>
        <viewmodel:GaussianBlurDialogViewModel/>
    </Window.DataContext>
    <Grid>
        <DataGrid x:Name="KernelMatrix" ItemsSource="{Binding Kernel}" HeadersVisibility="None" AutoGenerateColumns="True" Margin="10,122,209,54" CanUserAddRows="False" MaxColumnWidth="25"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="180,122,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Add}"/>
    </Grid>
</Window>
