<Window x:Class="GraphicFilters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicFilters"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        xmlns:viewmodel="clr-namespace:GraphicFilters.ViewModels">
    <Window.DataContext>
        <viewmodel:MainWindowViewModel/>
    </Window.DataContext>
    <Grid Background="Black">
        <Menu x:Name="fileMenu" VerticalAlignment="Top" FontSize="12">
            <MenuItem Header="File">
                <MenuItem x:Name="openFile" Header="Open Image" Command="{Binding OpenImageCommand}"/>
                <Separator/>
                <MenuItem x:Name="exitBtn" Header="Exit" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="Filters">
                <MenuItem x:Name="tresholdBtn" Header="Threshold" Command="{Binding ThresholdCommand}"/>
            </MenuItem>
        </Menu>
        <Image x:Name="sourceImg" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Uniform" MaxHeight="{Binding SourceImage.PixelHeight}" Source="{Binding SourceImage, Mode=TwoWay}" Margin="10,18,10,10"/>
    </Grid>
</Window>
