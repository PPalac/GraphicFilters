<Window x:Class="GraphicFilters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicFilters"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        xmlns:viewmodel="clr-namespace:GraphicFilters.ViewModels">
    <Window.DataContext>
        <viewmodel:ManWindowViewModel/>
    </Window.DataContext>
    <DockPanel LastChildFill="False">
        <Menu x:Name="fileMenu" DockPanel.Dock="Top" FontSize="12">
            <MenuItem Header="File">
                <MenuItem Header="Open" Command="{Binding OpenCommand}"/>
                <Separator/>
                <MenuItem x:Name="exitBtn" Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Filters">
                <MenuItem x:Name="tresholdBtn" Header="Treshold"/>
            </MenuItem>
        </Menu>
        <Image x:Name="sourceImg" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Source="{Binding SourceImage}" />
    </DockPanel>
</Window>
